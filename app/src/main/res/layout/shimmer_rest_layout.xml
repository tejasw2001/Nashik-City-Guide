<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/restaurant_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="19dp"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/light_grey">

                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:id="@+id/rest_name"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/light_grey"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/img1"></TextView>

                <TextView
                    android:id="@+id/cat1"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_grey"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:layout_below="@+id/rest_name"
                    android:layout_toRightOf="@id/img1"></TextView>

                <TextView
                    android:id="@+id/cat2"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/light_grey"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/cat1"
                    android:layout_toRightOf="@id/img1"></TextView>

                <View
                    android:id="@+id/rest_view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/cat2"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white">
                </View>

                <TextView
                    android:id="@+id/rest_timing"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/light_grey"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/rest_view1"
                    android:layout_toRightOf="@id/img1"></TextView>

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingRight="8dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/rest_timing">
                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</LinearLayout>