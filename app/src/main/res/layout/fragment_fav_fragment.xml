<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Activity.fav_fragment"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/fav_text_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/first"
            android:text="Favourite"
            android:layout_marginLeft="15dp"
            android:textColor="@color/dark_maroon"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/note_fav"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fav_text_fav"
            android:textSize="14sp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey"
            android:paddingLeft="15dp"
            android:text="NOTE : Your Favorite Places, Restaurants and Hotels will be Saved in the Respective Category">
        </TextView>

        <LinearLayout
            android:layout_below="@+id/note_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:id="@+id/category_hotel_fav"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/orange">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/second"
                        android:padding="25dp"
                        android:text="Hotels"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                    <Button
                        android:id="@+id/expand_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#00000000"
                        android:padding="20dp"
                        android:text="See Favourites"
                        android:textColor="@color/black" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-15dp"
                    android:src="@drawable/category_hotels_icon" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:elevation="8dp">
                <RelativeLayout
                    android:id="@+id/category_restaurant_fav"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/light_green">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/categories_restaurant_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/second"
                        android:padding="25dp"
                        android:text="Restaurants"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                    <Button
                        android:id="@+id/expand_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="#00000000"
                        android:padding="20dp"
                        android:text="See Favourites"
                        android:textColor="@color/black" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:id="@+id/category_place_fav"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/card2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/second"
                        android:padding="25dp"
                        android:text="@string/Place"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                    <Button
                        android:id="@+id/expand_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#00000000"
                        android:padding="20dp"
                        android:text="See Favourites"
                        android:textColor="@color/black" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-30dp"
                    android:src="@drawable/tourist_image" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>