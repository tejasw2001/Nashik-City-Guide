<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_screen"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first_line"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@color/light_green"
            android:layout_centerHorizontal="true">
        </View>

        <View
            android:id="@+id/second_line"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/card_2"
            android:layout_toRightOf="@id/first_line">
        </View>

        <View
            android:id="@+id/third_line"
            android:layout_width="20dp"
            android:layout_height="210dp"
            android:layout_marginLeft="8dp"
            android:background="@color/orange"
            android:layout_toRightOf="@id/second_line">
        </View>

        <View
            android:id="@+id/fourth_line"
            android:layout_width="20dp"
            android:layout_height="170dp"
            android:layout_marginLeft="8dp"
            android:background="@color/yellow"
            android:layout_toRightOf="@id/third_line">
        </View>

        <View
            android:id="@+id/fifth_line"
            android:layout_width="20dp"
            android:layout_height="140dp"
            android:layout_marginLeft="8dp"
            android:background="@color/light_maroon"
            android:layout_toRightOf="@id/fourth_line">
        </View>

        <View
            android:id="@+id/sixth_line"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:layout_marginLeft="8dp"
            android:background="@color/light_green"
            android:layout_toRightOf="@id/fifth_line">
        </View>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="navigate_anim.json"
            app:lottie_loop="true"
            android:layout_above="@id/slogan"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:paddingBottom="30dp"
            android:text="Navigate Through City"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

    </RelativeLayout>

</LinearLayout>